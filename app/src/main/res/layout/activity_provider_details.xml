<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ivDetailProfileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם העובד"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvDetailExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 שנות ניסיון"
            android:textSize="16sp"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/tvDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₪50 לשעה"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עליי:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:textDirection="rtl" />

    <TextView
        android:id="@+id/tvDetailBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="כאן יופיע התיאור שהעובד רשם בעברית..."
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:textDirection="rtl"
        android:lineSpacingExtra="4dp" />

    <Button
        android:id="@+id/btnContactWhatsApp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="שלח הודעת WhatsApp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#25D366"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>